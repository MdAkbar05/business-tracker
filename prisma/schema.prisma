generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  password  String
  accounts  Account[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Account {
  id     String  @id @default(cuid())
  userId String
  date   String
  costs  Cost[]
  saves  Save[]
  extras Extra[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "account_userId_idx")
}

model Cost {
  id        String   @id @default(cuid())
  accountId String
  name      String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId], name: "cost_accountId_idx")
}

model Save {
  id        String   @id @default(cuid())
  accountId String
  name      String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId], name: "save_accountId_idx")
}

model Extra {
  id        String   @id @default(cuid())
  accountId String
  name      String
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId], name: "extra_accountId_idx")
}
